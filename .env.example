# Database
DATABASE_URL=postgres://agentic:agentic@localhost:5432/agentic

# Redis
REDIS_URL=redis://localhost:6379

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333

# LLM Providers (add your API keys)
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
COHERE_API_KEY=your-cohere-key

# Langfuse Prompt Management (optional)
# Get keys from: https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_BASE_URL=https://cloud.langfuse.com

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Worker Configuration
WORKER_CONCURRENCY=4

# Logging
RUST_LOG=info,api=debug,worker=debug

# RAG Configuration
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_TOP_K=5

# Object Storage (S3-compatible: RustFS)
STORAGE_ENDPOINT=http://localhost:9000
STORAGE_ACCESS_KEY=admin
STORAGE_SECRET_KEY=adminpassword
STORAGE_REGION=us-east-1
STORAGE_PATH_STYLE=true
STORAGE_DEFAULT_BUCKET=brochures
# Optional: Public URL for direct access (CDN or public bucket URL)
# STORAGE_PUBLIC_URL=https://cdn.example.com
